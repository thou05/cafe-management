@model cafe_management.Models.TbAccount
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="page-title mb-0">
                    Cập nhật tài khoản: <span class="text-primary">@ViewBag.name</span>
                </h3>
            </div>

            <form asp-action="Edit" method="post">
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Tên người dùng</label>
                        <input asp-for="UserName" class="form-control" /> <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu mới</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu mới..." />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small class="text-muted">Nhập mật khẩu mới để thay đổi.</small>
                    </div>
                </div>

                <div class="card-footer d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Quay về
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}