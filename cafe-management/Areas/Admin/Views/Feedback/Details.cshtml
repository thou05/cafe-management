@model cafe_management.Models.TbFeedback
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">

            <div class="card-header">
                <h3 class="page-title mb-0">
                    Chi tiết phản hồi <span class="text-muted fs-5">#@Model.Id</span>
                </h3>
            </div>

            <div class="card-body">

                <div class="mb-4">
                    <label class="text-muted small text-uppercase fw-bold mb-1">Tiêu đề</label>
                    <h5 class="text-primary">@Html.DisplayFor(model => model.Title)</h5>
                </div>

                <div class="mb-4">
                    <label class="text-muted small text-uppercase fw-bold mb-1">Số điện thoại người gửi</label>
                    <div>
                        <i class="fa fa-phone-alt text-success me-2"></i>
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <a href="tel:@Model.PhoneNumber" class="text-decoration-none fw-bold text-dark">
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Không có số điện thoại</span>
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <label class="text-muted small text-uppercase fw-bold mb-2">Nội dung phản hồi</label>
                    <div class="p-3 bg-light border rounded">
                        <p class="mb-0 text-break" style="white-space: pre-line;">@Model.Content</p>
                    </div>
                </div>

            </div>

            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay về danh sách
                </a>
            </div>

        </div>
    </div>
</div>