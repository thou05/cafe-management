
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model cafe_management.Models.TbProduct

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<style>
    #imgPreview {
        display: block; /* Hiển thị ảnh ngay từ đầu */
        max-width: 100%;
        height: auto;
        margin-bottom: 15px; /* Đổi từ margin-top thành margin-bottom */
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 5px;
        background-color: #f8f9fa;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="page-title mb-0">Sửa sản phẩm: <span style="color:#666;">@Model.Name</span></h3>
            </div>

            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageUrl" />

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Price" class="form-label">Giá bán</label>
                                    <input asp-for="Price" type="number" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CategoryId" class="form-label">Loại sản phẩm</label>
                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.MaNhomSp">
                                        <option value="">-- Chọn loại --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Mô tả</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Notes" class="form-label">Ghi chú</label>
                                <input asp-for="Notes" class="form-control" />
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="fileInput" class="form-label">Hình ảnh</label>

                                <img id="imgPreview" src="@Url.Content("~/img/products/" + Model.ImageUrl)" alt="Ảnh sản phẩm" />

                                <input name="imageFile" type="file" class="form-control" id="fileInput" onchange="previewImage()" />
                                <small class="form-text text-muted">Chọn ảnh mới để thay thế.</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer d-flex gap-2">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay về</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function previewImage() {
            var fileInput = document.getElementById("fileInput");
            var imgPreview = document.getElementById("imgPreview");

            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    imgPreview.src = e.target.result;
                    imgPreview.style.display = "block";
                };
                reader.readAsDataURL(fileInput.files[0]);
            }
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
