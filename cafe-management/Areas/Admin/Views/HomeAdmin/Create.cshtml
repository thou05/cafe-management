@model cafe_management.Models.TbProduct
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #imgPreview {
        display: none;
        max-width: 100%;
        height: auto;
        margin-top: 15px;
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 5px;
        background-color: #f8f9fa;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="page-title mb-0">Thêm sản phẩm mới</h3>
            </div>

            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Price" class="form-label">Giá bán</label>
                                    <input asp-for="Price" type="number" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CategoryId" class="form-label">Loại sản phẩm</label>
                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                        <option value="">-- Chọn loại sản phẩm --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Mô tả</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Notes" class="form-label">Ghi chú</label>
                                <input asp-for="Notes" class="form-control" />
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="HinhAnh" class="form-label">Hình ảnh</label>
                                <input name="imageFile" type="file" class="form-control" id="HinhAnh" onchange="previewImage()" />

                                <img id="imgPreview" alt="Ảnh xem trước" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer d-flex gap-2">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay về</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        function previewImage() {
            var fileInput = document.getElementById("HinhAnh");
            var imgPreview = document.getElementById("imgPreview");

            if (fileInput.files && fileInput.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    imgPreview.src = e.target.result;
                    imgPreview.style.display = "block"; // Hiển thị ảnh
                };

                reader.readAsDataURL(fileInput.files[0]);
            } else {
                imgPreview.src = ""; // Xóa ảnh nếu người dùng hủy chọn
                imgPreview.style.display = "none"; // Ẩn đi
            }
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}