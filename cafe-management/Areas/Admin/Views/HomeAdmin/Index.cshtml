@using cafe_management.Models
@using cafe_management.ViewModels
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<ProductViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "List Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .product-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
        border: 1px solid #eee;
    }
    .table tbody td, .table thead th {
        vertical-align: middle;
    }
    .table thead th {
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        background-color: #f8f9fa;
    }
    .card-header-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .search-field .input-group {
        width: 300px;
    }
    .alert {
        margin-bottom: 15px; /* Thêm khoảng cách cho thông báo */
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                
                <div class="card-header card-header-flex">
                    <div class="page-header mb-0">
                        @if (!String.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <h3 class="page-title mb-0">Kết quả cho: <span style="color:#666;text-transform:capitalize;">@ViewBag.SearchTerm</span></h3>
                        }
                        else
                        {
                            <h3 class="page-title mb-0">Danh sách sản phẩm</h3>
                        }
                    </div>
                    <div class="search-field">
                        @using (Html.BeginForm("Index", "HomeAdmin", FormMethod.Get))
                        {
                            <div class="input-group">
                                <input type="text" class="form-control" name="search" placeholder="Tìm kiếm..." autocomplete="off" value="@ViewBag.SearchTerm">
                                <button class="btn btn-outline-secondary" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                            </div>
                        }
                    </div>
                </div>

                <div class="card-body">
                    <p>
                        <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Thêm mới</a>
                    </p>

                    @if (TempData["Message"] != null)
                    {
                        var messageType = TempData["MessageType"] ?? "success"; 
                        <div class="alert alert-@messageType alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Mã SP</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Hình ảnh</th>
                                    <th>Loại sản phẩm</th>
                                    <th>Giá bán</th>
                                    <th>Ghi chú</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <img class="product-image" src=@Url.Content("../img/products/" + item.ImageUrl) alt="@item.Name" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category)
                                        </td>
                                        <td>
                                            @(item.Price.ToString("n0")) &#8363;
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Notes)
                                        </td>
                                        <td>
                                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id" asp-route-name="@item.Name" title="Xem">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id" asp-route-name="@item.Name" title="Sửa">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Xóa"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @if (Model.PageCount > 1)
                {
                    <div class="card-footer">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, search = ViewBag.SearchTerm }), new PagedListRenderOptions()
                        {
                            MaximumPageNumbersToDisplay = 5,
                            LiElementClasses = new List<String> { "page-item" },
                            PageClasses = new List<String> { "page-link" },
                        })
                    </div>
                }
            </div>
            </div>
    </div>
</div>
            