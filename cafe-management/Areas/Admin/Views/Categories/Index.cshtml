@using X.PagedList.Mvc.Core;
@using cafe_management.Models
@model X.PagedList.IPagedList<TbCategory>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">

            <div class="card-header card-header-flex">
                <div class="page-header mb-0">
                    @if (!String.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <h3 class="page-title mb-0">Kết quả cho: <span style="color:#666;text-transform:capitalize;">@ViewBag.SearchTerm</span></h3>
                    }
                    else
                    {
                        <h3 class="page-title mb-0">Quản lý Loại sản phẩm</h3>
                    }
                </div>
                <div class="search-field">
                    @using (Html.BeginForm("Index", "Categories", FormMethod.Get))
                    {
                        <div class="input-group">
                            <input type="text" class="form-control" name="search" placeholder="Tìm kiếm..." autocomplete="off" value="@ViewBag.SearchTerm">
                            <button class="btn btn-primary" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </div>
                    }
                </div>
            </div>

            <div class="card-body">
                <p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Thêm mới
                    </a>
                </p>

                @if (TempData["Message"] != null)
                {
                    var messageType = TempData["MessageType"] ?? "success";
                    <div class="alert alert-@messageType alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên loại sản phẩm</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Sửa">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Xóa"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa loại sản phẩm này không?');">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model.PageCount > 1)
            {
                <div class="card-footer">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, search = ViewBag.SearchTerm }), new PagedListRenderOptions()
                    {
                        MaximumPageNumbersToDisplay = 5,
                                LiElementClasses = new List<String> { "page-item" },
                                PageClasses = new List<String> { "page-link" },
                                })
            </div>
                        }
        </div>
    </div>
</div>


