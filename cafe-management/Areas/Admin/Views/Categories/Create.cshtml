@model cafe_management.Models.TbCategory
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm">
            <div class="card-header">
                <h3 class="page-title mb-0">Thêm nhóm sản phẩm</h3>
            </div>

            <form asp-action="Create" method="post">
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Tên nhóm sản phẩm</label>
                        <input asp-for="Name" class="form-control" placeholder="Vd: Cà phê, Trà, Nước ép..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>

                <div class="card-footer d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Thêm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Quay về
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
