

@using cafe_management.Models
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TbBill>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Quản lý hoá đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12">
        <div class="card shadow-sm">

            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="page-title mb-0" style="font-size: 1.25rem; font-weight: 500;">
                    Quản lý hoá đơn
                </h3>

                <div class="search-box" style="width: 300px;">
                    <form asp-action="Index" method="get">
                        <div class="input-group">
                            <input type="date" class="form-control" name="search"
                                   value="@ViewBag.search" />
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                            @if (!string.IsNullOrEmpty(ViewBag.search))
                            {
                                <a asp-action="Index" class="btn btn-outline-secondary" title="Xóa lọc">
                                    <i class="fa fa-times"></i>
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Mã hoá đơn</th>
                                <th>Ngày bán</th>
                                <th>SĐT Khách hàng</th>
                                <th class="text-end">Tổng tiền</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="text-muted">#@item.Id</span>
                                        </td>
                                        <td>
                                            <i class="fa fa-calendar-alt text-muted me-1"></i>
                                            @item.OrderDate.ToString("dd/MM/yyyy HH:mm")
                                        </td>
                                        <td>
                                            @if (string.IsNullOrEmpty(item.CustomerId.ToString())) // Kiểm tra null nếu cần
                                            {
                                                <span>Khách lẻ</span>
                                            }
                                            else
                                            {
                                                @item.CustomerId
                                            }
                                        </td>
                                        <td class="text-end fw-bold text-success">
                                            @(item.TotalAmount.ToString("N0")) &#8363;
                                        </td>
                                        <td class="text-center">
                                            <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id" title="Xem chi tiết">
                                                <i class="fa fa-eye"></i> Chi tiết
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4 text-muted">
                                        <i class="fa fa-file-invoice fa-2x mb-2"></i><br />
                                        Không tìm thấy hóa đơn nào trong ngày này.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model != null && Model.PageCount > 1)
            {
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, search = ViewBag.search }),
                        new PagedListRenderOptions()
                        {
                            MaximumPageNumbersToDisplay = 5,
                            LiElementClasses = new List<String> { "page-item" },
                            PageClasses = new List<String> { "page-link" },
                        })
                </div>
            </div>
                        }
        </div>
    </div>
</div>

<style>
    .pagination {
        margin-bottom: 0;
    }
</style>