
@using cafe_management.Models
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TbNews>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Quản lí tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">

        <div class="card shadow-sm">

            <div class="card-header card-header-flex">
                <div class="page-header mb-0">
                    @if (!String.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <h3 class="page-title mb-0">Kết quả cho: <span class="text-primary">@ViewBag.SearchTerm</span></h3>
                    }
                    else
                    {
                        <h3 class="page-title mb-0">Quản lí tin tức</h3>
                    }
                </div>

                <div class="search-field">
                    @using (Html.BeginForm("Index", "NewsManage", FormMethod.Get))
                    {
                        <div class="input-group">
                            <input type="text" class="form-control" name="search" placeholder="Tìm kiếm tiêu đề..." autocomplete="off" value="@ViewBag.SearchTerm">
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>

            <div class="card-body">

                <p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Viết bài mới
                    </a>
                </p>

                @if (TempData["Message"] != null)
                {
                    var messageType = TempData["MessageType"] ?? "success";
                    <div class="alert alert-@messageType alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Mã tin</th>
                                <th>Tiêu đề</th>
                                <th>Ngày đăng</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        <span class="fw-bold">@Html.DisplayFor(modelItem => item.Title)</span>
                                    </td>
                                    <td>
                                        <i class="fa fa-calendar-alt text-muted me-1"></i>
                                        @(item.PostedDate.HasValue? item.PostedDate.Value.ToString("dd/MM/yyyy") : "---")
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-info btn-sm text-white" asp-action="Details" asp-route-id="@item.Id" asp-route-name="@item.Title" title="Xem chi tiết">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id" asp-route-name="@item.Title" title="Sửa bài viết">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Xóa bài viết"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa tin tức này không?');">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model.PageCount > 1)
            {
                <div class="card-footer">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, search = ViewBag.SearchTerm }), new PagedListRenderOptions()
                    {
                        MaximumPageNumbersToDisplay = 5,
                                LiElementClasses = new List<String> { "page-item" },
                                PageClasses = new List<String> { "page-link" },
                                })
            </div>
                        }
        </div>
    </div>
</div>